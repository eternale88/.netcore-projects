@model FutureValueModel
@{ 
    ViewBag.Title = "Future Value Calculator";
}

<h1>Future Value Calculator</h1>
<form asp-action="Index" method="post">
    <div>
        <label asp-for="@Model.MonthlyInvestment"></label>
        <input asp-for="@Model.MonthlyInvestment" />
    </div>

    <div>
        <label asp-for="@Model.YearlyInterestRate"></label>
        <input asp-for="@Model.YearlyInterestRate" />
    </div>

    <div>
        <label asp-for="@Model.Years"></label>
        <input asp-for="@Model.Years"/>
    </div>

    <div>
        <label>Future Value:</label>
        <label>@ViewBag.FutureValue</label>
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>

