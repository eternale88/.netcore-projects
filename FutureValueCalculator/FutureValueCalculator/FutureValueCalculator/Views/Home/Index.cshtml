@model FutureValueModel
@{ 
    ViewBag.Title = "Future Value Calculator";
}

    <div class="container">
        <header class="jumbotron">
            <h1 class="font-weight-bold">Ethan's</h1>
            @*<img id="logo" alt="Ethan's Calculator" src="~/images/PavolLogo.jpg" class="img-responsive"/>*@
            <h1 class="mt-3">@ViewBag.Title</h1>
        </header>
        <main>
            <div class="alert alert-success alert-dismissible">
                <button class="close" data-dismiss="alert">&times;</button>
                 This site is for educational purposes.
            </div>
            <form asp-action="Index" method="post">
                @*<div asp-validation-summary="All"></div>*@
                <div class="row">
                    <label asp-for="@Model.MonthlyInvestment" class="control-label col-3"></label>
                    <input asp-for="@Model.MonthlyInvestment" class="form-control col-3" />
                    <span asp-validation-for="@Model.MonthlyInvestment" class="text-danger col"></span>
                </div>

                <div class="row">
                    <label asp-for="@Model.YearlyInterestRate" class="control-label col-3"></label>
                    <input asp-for="@Model.YearlyInterestRate" class="form-control col-3" />
                    <span asp-validation-for="@Model.YearlyInterestRate" class="text-danger col"></span>

                </div>

                <div class="row">
                    <label asp-for="@Model.Years" class="control-label col-3"></label>
                    <input asp-for="@Model.Years" class="form-control col-3" />
                    <span asp-validation-for="@Model.Years" class="text-danger col"></span>

                </div>

                <div class="row">
                    <label class="control-label col-3">Future Value:</label>
                    <input readonly value="@ViewBag.FutureValue" class="form-control col-3" />
                </div>
                <div class="row">
                    <div class="col offset-3 pl-0">
                        <button type="submit" class="btn btn-primary">Calculate</button>
                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </main>
        
    </div>


